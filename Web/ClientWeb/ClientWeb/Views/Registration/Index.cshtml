@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Регистрация</div>

                <div class="card-body">
                    <form asp-action="RegistrUser" asp-controller="Registration">
                        <div class="row mb-3">
                            <label for="login" class="col-md-4 col-form-label text-md-end">Логин</label>

                            <div class="col-md-6">
                                <input id="Username" type="text" class="form-control" name="Username" required autocomplete="login" autofocus>
                                <span class="invalid-feedback" role="alert">
                                    <strong></strong>
                                </span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="password" class="col-md-4 col-form-label text-md-end">Пароль</label>

                            <div class="col-md-6">
                                <input id="PasswordHash" type="password" class="form-control" name="PasswordHash" required autocomplete="current-password">
                                <span class="invalid-feedback" role="alert">
                                    <strong></strong>
                                </span>
                            </div>
                        </div>
                        <div class="row mb-0">
                            <div class="col-md-8 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Зарегистрироваться
                                </button>
                            </div>
                        </div>
                    </form>
                    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
                    <script>
                        document.getElementById('registrationForm').addEventListener('submit', function (event) {
                            event.preventDefault(); // Предотвращаем стандартное поведение формы
                            // Обрабатываем отправку формы с использованием AJAX
                            handleFormSubmission();
                        });

                        function handleFormSubmission() {
                            // Ваш код AJAX для отправки данных формы на сервер
                            // ...

                            // После успешной регистрации вызываем функцию для отображения уведомления
                            showRegistrationSuccessMessage();
                        }

                        function showRegistrationSuccessMessage() {
                            Swal.fire({
                                icon: 'success',
                                title: 'Регистрация успешна!',
                                text: 'Теперь вы можете войти.',
                            });
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>